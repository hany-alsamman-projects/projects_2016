<script>

$(document).ready( function() {

loadDate();

$("#msubmit").click(function() {

    $.ajax({
           type: "POST",
           url: 'http://mall.vip4it.com/widget_newsletter/ext.php?t=signup',
           data: $("#vipajax").serialize(), // serializes the form's elements.
           success: function(data)
           {
               alert(data); // show response from the php script.
           }
         });

    // Prevent the browser from submitting it NOW,
    // because the AJAX is still running
    return false;
    });
	
});

var count=0;
function loadDate(){
	KSA=3;
	CAN=-4;
	count++;
	// --------KSA-------
	//new Date(year, month, day, hours, minutes, seconds, milliseconds)
	var DS = new Date(2013, 01, 7,17+KSA,54,(53+count),000000); 	
	var SH= DS.getHours();	
	var SM=DS.getMinutes();
	var SS= DS.getSeconds();
	var HTS="AM"; if(SH>12){SH=SH-12;HTS="PM";} if(SH==0){SH=12;}
	// --------CA-------
	var DC= new Date(2013, 01, 7,17+CAN,54,(53+count),000000); 	
	var CH= DC.getHours();	
	var CM=DC.getMinutes();
	var CS= DC.getSeconds();	
	var HTC="AM"; if(CH>12){CH=CH-12;HTC="PM";} if(CH==0){CH=12;} 
	// ---------------------------------------		//getFullYear()	getDay() getMonth()
	var str='';

	
	{{ if global:current_language == 'en' }} 
	  
		str+='<p>'+writeIslamicDate()+' <img src="system/cms/themes/default/img/clock.png" width="19" height="18" /> The Time now is '+SH+':'+SM+':'+SS+' in <span class="highlight">'+HTS+'</span> Riyadh</p>';

	{{ elseif  global:current_language == 'ar'}}

		str+='<p>'+writeIslamicDate()+' <img src="system/cms/themes/default/img/clock.png" width="19" height="18" /> الساعة الآن '+SH+':'+SM+':'+SS+'  <span class="highlight">'+HTS+'</span> في الرياض </p>';

	{{ endif }}


	$('#siteDate').html(str);
	var t=setTimeout('loadDate()',1000);
}
</script>


